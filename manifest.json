{
  "manifest_version": 3,
  "name": "Markdown Link Copier",
  "version": "1.0",
  "description": "Copy selected link as Markdown [Text](URL)",
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "scripting",
    "activeTab",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}